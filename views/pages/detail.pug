extend ../layout.pug

block content
	.container
		h1= movie.title
		hr
		.row
			.col-md-7
				video(controls='controls',autoplay='autoplay',src= movie.flash) your browser does not support video
			.col-md-5
				dl.dl-horizontal
					dt 电影名字
					dd= movie.title
					dt 导演
					dd= movie.director
					dt 国家
					dd= movie.country
					dt 语言
					dd= movie.language
					dt 上映年份
					dd= movie.year
					dt 简介
					dd= movie.summary
