extends ../layout.pug

block content
	.container
		h1 #{title}
		hr
		.row
			each cat in categories
				.panel.panel-primary
					.panel-heading
						a(style='color:white;cursor:pointer',href='/search?category='+cat._id+'&page=1')
							h3 #{cat.name}
					.panel-body
						if cat.movies && cat.movies.length >0
							each item in cat.movies
								.col-xs-3.col-md-3
									.thumbnail
										a(href='/movie/'+item._id)
											img(src=item.poster,alt=item.title)
										.caption
											h3 #{item.title}
											p(style='height:60px;overflow:hidden;line-height:1.5em;text-overflow:ellipsis') #{item.summary}
											p: a.btn.btn-primary(href='/movie/'+item._id) 播放